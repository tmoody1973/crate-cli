{
  "name": "crate-cli",
  "version": "0.1.0",
  "description": "AI-powered music research agent for the terminal",
  "type": "module",
  "main": "src/cli.ts",
  "scripts": {
    "dev": "tsx src/cli.ts",
    "dev:opus": "tsx src/cli.ts --model opus",
    "dev:haiku": "tsx src/cli.ts --model haiku",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "music",
    "research",
    "cli",
    "ai",
    "agent"
  ],
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.49",
    "@mariozechner/pi-tui": "^0.54.0",
    "chalk": "^5.6.2",
    "cheerio": "^1.2.0",
    "dotenv": "^17.3.1",
    "rss-parser": "^3.13.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^25.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
